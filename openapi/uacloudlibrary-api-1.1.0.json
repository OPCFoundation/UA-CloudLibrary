            "nullable": true
          },
          "version": {
            "type": "string",
            "nullable": true
          },
          "availableModel": {
            "$ref": "#/components/schemas/Nodeset"
          }
        },
        "additionalProperties": false
      },
      "UANameSpace": {
        "required": [
          "copyrightText",
          "description",
          "nodeset",
          "title"
        ],
        "type": "object",
        "properties": {
          "nodeset": {
            "$ref": "#/components/schemas/Nodeset"
          },
          "creationTime": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "numberOfDownloads": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "license": {
            "type": "string",
            "nullable": true
          },
          "copyrightText": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "documentationUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "iconUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "licenseUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "purchasingInformationUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "releaseNotesUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "testSpecificationUrl": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "supportedLocales": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "basicAuth": [ ]
    }
  ]
