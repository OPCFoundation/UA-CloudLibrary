    "/infomodel/node": {
      "get": {
        "tags": [
          "InfoModel"
        ],
        "parameters": [
          {
            "name": "expandedNodeId",
            "in": "query",
            "description": "The expanded node ID of the OPC UA node requested, starting with nsu=.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "identifier",
            "in": "query",
            "description": "OPC UA Information model identifier.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The OPC UA node and its metadata.",
